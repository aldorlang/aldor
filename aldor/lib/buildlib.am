aldorsrcdir = $(abs_top_srcdir)/aldor/src
aldorexedir = $(top_builddir)/aldor/src

AM_CFLAGS = -I$(aldorsrcdir)

lib$(libraryname).al: $(foreach i,$(SUBDIRS),$i/_sublib_$(libraryname).al)
	$(AM_V_AR)		\
	for l in $+; do		\
	   ar x $$l;		\
	   ar cr $@ $$(ar t $$l);\
	   rm $$(ar t $$l);	\
	done

CLEANFILES = lib$(libraryname).al
